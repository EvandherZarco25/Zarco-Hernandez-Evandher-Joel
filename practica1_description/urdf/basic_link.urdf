<?xml version="1.0" ?>

<robot name="basic_link">

    <link name="base_link">

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.15 0.10 0.20" />
            </geometry>
            <material name="color_1">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.15 0.10 0.20" />
            </geometry>
        </collision>

        <inertial>
            <mass value="1.0" />
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>

    <link name="link_1">
        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.05 0.05 0.5" />
            </geometry>
            <material name="green">
                <color rgba="0.0 1.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.05 0.05 0.5" />
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0" />  
            <mass value="1.0" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>
    </link>
    
    <joint name = "base_link_to_link_1_joint" type = "revolute" > 

        <parent link = "base_link"/>
        <child link = "link_1" />
        <axis xyz = "1 0 0"/>
        <limit lower = "-1.57" upper = "1.57" velocity = "50"
        effort = "10"/>
        <origin xyz = "0.0 0.0 0.0" rpy = "0.0 0.0 0.0" />



    </joint> 
    
</robot>