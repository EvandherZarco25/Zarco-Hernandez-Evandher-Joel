<?xml version="1.0" encoding="utf-8"?>


<robot name="robot_scara" xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="world">
    </link>

    <joint name="world_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
    </joint>

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.2 0.3"/>
            </geometry>
            <material name="red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.15" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.2 0.3"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1"/>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
            <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
        </inertial>
    </link>

    <link name="link_1">
        
        <visual>
            <origin xyz="0.25 0.0 0.05" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.1 0.1" />
            </geometry>
            <material name="green">
                <color rgba="0.0 1.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.25 0.0 0.05" rpy="0.0 0.0 0.0" />
                <geometry>
                    <box size="0.5 0.1 0.1" />
                </geometry>
        </collision>

        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="2" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>

    </link>

    <link name="link_2">
        
        <visual>
            <origin xyz="0.25 0.0 0.05" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.1 0.1" />
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.25 0.0 0.05" rpy="0.0 0.0 0.0" />
                <geometry>
                    <box size="0.5 0.1 0.1" />
                </geometry>
        </collision>

        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>

    </link>

    <link name="link_3">
        
        <visual>
            <origin xyz="0.25 0.0 0.05" rpy="0.0 0.0 0.0" />
            <geometry>
                <box size="0.5 0.1 0.1" />
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0.25 0.0 0.05" rpy="0.0 0.0 0.0" />
                <geometry>
                    <box size="0.5 0.1 0.1" />
                </geometry>
        </collision>

        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial>

    </link>

    <joint name="link_1_joint" type="revolute">
        <parent link="base_link"/>
        <child link="link_1"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.57" upper="1.57" velocity="2.0"
            effort="1000.0"/>
        <origin xyz="0.1 0 0.3" rpy="0 0 0"/>
    </joint>

    <joint name="link_2_joint" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" velocity="1.0"
            effort="1000.0"/>
        <origin xyz="0.5 0 0.1" rpy="0 0 0"/>
    </joint>

    <joint name="link_3_joint" type="revolute">
        <parent link="link_2"/>
        <child link="link_3"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" velocity="1.0"
            effort="1000.0"/>
        <origin xyz="0.5 0 0.1" rpy="0 0 0"/>
    </joint>

    <link name="P" >
    </link>

    <joint name="P_joint" type="fixed">
        <parent link="link_3"/>
        <child link="P"/>
        <origin xyz="0.5 0 0" rpy="0 0 0"/>
    </joint>

</robot>
